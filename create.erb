<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>testai</title>
  <style>
    /* ★ 全体の背景を淡い水色に統一 */
    body { font-family: 'Helvetica Neue', Arial, sans-serif; background-color: #e3f2fd; color: #333; margin: 0; padding: 20px; }
    .container { max-width: 600px; margin: 0 auto; }
    
    /* ★ ナビゲーション */
    .nav-bar { display: flex; justify-content: space-between; align-items: center; background: white; padding: 12px 20px; border-radius: 12px; margin-bottom: 25px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
    .nav-bar a { text-decoration: none; color: #0288d1; font-weight: bold; font-size: 14px; }

    /* ★ 登録済みリストのカード */
    .word-card { background: white; border-radius: 16px; padding: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); margin-bottom: 25px; }
    .card-title { font-size: 1.1rem; color: #01579b; margin-bottom: 15px; border-bottom: 2px solid #e1f5fe; padding-bottom: 10px; }
    
    .word-item { display: flex; justify-content: space-between; align-items: center; padding: 10px; border-bottom: 1px solid #f1f8ff; }
    .word-text { font-weight: bold; color: #1e88e5; }
    .mean-text { color: #546e7a; margin-left: 10px; font-size: 0.9rem; }

    /* ★ 入力セクション */
    .form-section { background: #bbdefb; padding: 20px; border-radius: 16px; margin-bottom: 20px; }
    .form-label { display: block; font-weight: bold; color: #01579b; margin-bottom: 10px; font-size: 0.9rem; }
    
    .input-group { display: flex; gap: 10px; margin-bottom: 15px; }
    input[type="text"] { flex: 1; padding: 12px; border: 2px solid white; border-radius: 10px; outline: none; transition: 0.3s; }
    input[type="text"]:focus { border-color: #03a9f4; }

    /* ★ ボタンデザイン */
    .btn { border: none; padding: 10px 15px; border-radius: 10px; cursor: pointer; font-weight: bold; transition: 0.2s; }
    .btn-add { background: #03a9f4; color: white; width: 50px; font-size: 20px; box-shadow: 0 3px 0 #0277bd; }
    .btn-ai { background: #81d4fa; color: #01579b; box-shadow: 0 3px 0 #4fc3f7; }
    .btn-delete { background: #cfd8dc; color: #546e7a; font-size: 11px; padding: 5px 10px; }
    .btn-main { background: #28a745; color: white; width: 100%; padding: 15px; font-size: 1.1rem; box-shadow: 0 4px 0 #1e7e34; margin-top: 10px; }
    
    .status-bar { text-align: center; margin-top: 20px; font-size: 13px; color: #78909c; }
    .logout-link { background: none; border: none; color: #b0bec5; cursor: pointer; font-size: 12px; text-decoration: underline; }
  </style>
</head>
<body>
 <div class="container">
  <div class="nav-bar">
    <a href="/">← ホーム画面</a>
    <% if session[:user_id] %>  
    <% else %>
      <a href="/login">ログイン</a>
    <% end %>
  </div>

  <div class="word-card">
    <div class="card-title">登録中の単語</div>
    <% if @words == nil || @words.empty? %>
      <p style="text-align: center; color: #b0bec5; font-size: 14px;">単語を登録してください</p>
    <% else %>
      <% @words.each do |word| %>
        <div class="word-item">
          <div>
            <span class="word-text"><%= word.word %></span>
            <span class="mean-text"><%= word.mean %></span>
          </div>
          <form action="/word-delete" method="post" style="margin: 0;">
            <input type="hidden" name="id" value="<%= word.id %>">
            <button type="submit" class="btn btn-delete">削除</button>
          </form>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-section">
    <span class="form-label">手動で単語を追加</span>
    <form action="/word-setting" method="post" class="input-group">
      <input type="text" name="word" placeholder="単語" required/>
      <input type="text" name="mean" placeholder="定義" required/>
      <button type="submit" class="btn btn-add">＋</button>
    </form>

    <span class="form-label">AIで定義を自動生成</span>
    <form action="/word-ai" method="post" class="input-group">
      <input type="text" name="word" placeholder="単語を入力..." required/>
      <button type="submit" class="btn btn-ai">AI追加</button>
    </form>
  </div>

  <form action="/keep-words" method="post">
    <input type="hidden" name="file" value="<%= @file %>">
    <button type="submit" class="btn btn-main">保存する</button>
  </form>

  <div class="status-bar">
    <% if session[:user_id] %>
      <span>ログイン済み: <%= session[:user_id].to_s %></span>
      <form action="/logout" method="post" style="display: inline; margin-left: 10px;">
        <button type="submit" class="logout-link">ログアウト</button>
      </form>
    <% else %>
      <span>未ログイン</span>
    <% end %>
  </div>
</div>
<script>
  // デフォルト：/create から離れたら削除する
  let shouldSendLeave = true;

  // -----------------------------
  // ① /make-test に行くときは削除しない
  // -----------------------------
  const makeTestForm = document.getElementById("make-test");
  if (makeTestForm) {
    makeTestForm.addEventListener("submit", function () {
      shouldSendLeave = false;
    });
  }

  // -----------------------------
  // ② /create 内の操作（単語追加 / AI定義 / 削除）は削除しない
  // action 属性で判定する
  // -----------------------------
  const stayForms = document.querySelectorAll(
    'form[action="/word-setting"], form[action="/word-ai"], form[action="/word-delete"]'
  );
  stayForms.forEach(form => {
    form.addEventListener("submit", function () {
      shouldSendLeave = false;
    });
  });

  // -----------------------------
  // ③ ページ離脱時（/create → 他のページ）だけ削除APIを叩く
  // -----------------------------
  window.addEventListener("beforeunload", function () {
    if (!shouldSendLeave) return;

    navigator.sendBeacon(
      "/leave_create",
      new Blob([JSON.stringify({ left: true })], { type: "application/json" })
    );
  });
</script>
</body>
</html>